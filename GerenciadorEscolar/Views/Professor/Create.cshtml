@model GerenciadorEscolar.Models.Professor

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Adicionar</h1>

<h4 class="text-center">Insira os dados do professor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Disciplina" class="control-label"></label>
                <select asp-for="Disciplina" class="form-select">
                    <option>Português</option>
				    <option>Matemática</option>
				    <option>Geometria</option>
				    <option>História Geral</option>
				    <option>História do Brasil</option>
			    	<option>Geografia</option>
				    <option>Geografia Politica</option>
	    			<option>Física 1</option>
		    		<option>Física 2</option>
			    	<option>Química 1</option>
				    <option>Química 2</option>
    				<option>Inglês</option>
	    			<option>Espanhol</option>
                    <option>Edf. Física</option>
                </select>

                <span asp-validation-for="Disciplina" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input type="email" asp-for="Email" class="form-control" placeholder="email@exemplo.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input type="password" asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
            <br />
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

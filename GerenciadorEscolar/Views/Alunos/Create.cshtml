@model GerenciadorEscolar.Models.Aluno

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Adicionar</h1>

<h4 class="text-center">Aluno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Turma" class="control-label"></label>
                <select asp-for="Turma" class="form-select">
                    <option>1º ano A</option>
					<option>1º ano B</option>
					<option>1º ano C</option>
					<option>2º ano A</option>
					<option>2º ano B</option>
					<option>2º ano C</option>
					<option>3º ano A</option>
					<option>3º ano B</option>
					<option>3º ano C</option>
                </select>
                <span asp-validation-for="Turma" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Nota1" class="control-label"></label>
                <input asp-for="Nota1" class="form-control" step="0.1" pattern="([0-9]{1,3}\.)?[0-9]{1,3},[0-9]{2}$" min="0" type="tel" />
                <span asp-validation-for="Nota1" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Nota2" class="control-label"></label>
                <input asp-for="Nota2" class="form-control" step="0.1" pattern="([0-9]{1,3}\.)?[0-9]{1,3},[0-9]{2}$" min="0" type="tel" />
                <span asp-validation-for="Nota2" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Nota3" class="control-label"></label>
                <input asp-for="Nota3" class="form-control" step="0.1" pattern="([0-9]{1,3}\.)?[0-9]{1,3},[0-9]{2}$" min="0" type="tel" />
                <span asp-validation-for="Nota3" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Nota4" class="control-label"></label>
                <input asp-for="Nota4" class="form-control" step="0.1" pattern="([0-9]{1,3}\.)?[0-9]{1,3},[0-9]{2}$" type="tel" />
                <span asp-validation-for="Nota4" class="text-danger"></span>
            </div>
            <br />
          <!-- <div class="form-group">
                <label asp-for="Media" class="control-label"></label>
                <input asp-for="Media" class="form-control" />
                <span asp-validation-for="Media" class="text-danger"></span>
            </div>-->
            <br />
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
